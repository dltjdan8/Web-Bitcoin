<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="encoder"
		class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder" />
	<bean id="userService"
		class="com.bit.coin.service.CustomUserDetailsService"></bean>
	<bean id="loginSuccessHandler"
		class="com.bit.coin.security.LoginSuccessHandler"></bean>

	<security:http>
		<!-- <security:access-denied-handler ref=""/> -->
		<security:intercept-url pattern="/user/*"
			access="permitAll" />
		<security:form-login login-page="/home"
			login-processing-url="/user/login" username-parameter="id"
			password-parameter="pwd" />
		<security:logout logout-success-url="/home"
			logout-url="/user/logout" invalidate-session="true" />
		<security:csrf disabled="false" />
	</security:http>
	<security:authentication-manager>
		<security:authentication-provider
			user-service-ref="userService">
			<security:password-encoder ref="encoder" />
		</security:authentication-provider>
	</security:authentication-manager>

</beans>
